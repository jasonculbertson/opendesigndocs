---
import Layout from './Layout.astro';
import { format } from 'date-fns';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} showBackButton={true}>
  <main class="py-8 px-4 sm:px-6 lg:px-10">
    <article class="max-w-[680px]">
      <div class="mb-12">
        <h1 class="text-[32px] sm:text-[40px] leading-[40px] sm:leading-[48px] font-semibold text-[#1a1f36] tracking-[-0.4px]">{frontmatter.title}</h1>
        {frontmatter.description && (
          <p class="mt-3 text-base sm:text-[17px] leading-[24px] text-[#425466]">{frontmatter.description}</p>
        )}
      </div>

      <div class="prose prose-slate max-w-none">
        <slot />
      </div>
    </article>
  </main>
</Layout>