---
import Layout from './Layout.astro';
import { format } from 'date-fns';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} showBackButton={true}>
  <main class="py-8 px-10">
    <article class="max-w-[680px]">
      <div class="mb-8">
        <h1 class="text-base font-medium text-gray-900">{frontmatter.title}</h1>
      </div>

      <div class="prose prose-slate max-w-none">
        <slot />
      </div>
    </article>
  </main>
</Layout>