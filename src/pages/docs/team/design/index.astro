---
import Layout from '../../../../layouts/Layout.astro';

const resources = [
  {
    title: 'Sprint Docs',
    description: 'Streamline your design sprints with structured templates',
    href: '/docs/team/design/design-sprint',
    image: '🏃‍♂️'
  },
  {
    title: 'Design T-shirt sizing',
    description: 'Simplify project estimation and resource allocation',
    href: '/docs/team/design/t-shirt-sizing',
    image: '👕'
  }
];

const title = "Design Team";
---

<Layout title={title}>
  <div class="min-h-screen">
    <div class="py-8 px-10">
      <div class="mb-8">
        <h1 class="text-base font-medium text-gray-900">{title}</h1>
      </div>
      
      <div class="grid grid-cols-1 gap-4 max-w-[680px]">
        {resources.map(resource => (
          <a href={resource.href} class="block group">
            <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-duration-200">
              <div class="flex items-center p-4">
                <div class="flex-shrink-0 text-2xl mr-4">
                  {resource.image}
                </div>
                <div>
                  <h3 class="text-sm font-medium text-gray-900 mb-1">
                    {resource.title}
                  </h3>
                  <p class="text-xs text-gray-600">{resource.description}</p>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>