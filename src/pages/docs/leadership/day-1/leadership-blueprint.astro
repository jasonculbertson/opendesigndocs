---
import { getEntry } from 'astro:content';
import Layout from '../../../../layouts/Layout.astro';

const entry = await getEntry('docs', 'leadership/day-1/leadership-blueprint');
const { Content } = await entry.render();
---

<Layout title={entry.data.title} showBackButton={true}>
  <main class="py-8 px-10">
    <article class="max-w-[680px] mx-auto">
      <div class="mb-12">
        <div class="text-4xl mb-2">🗺️</div>
        <h1 class="text-4xl font-bold text-gray-900">Leadership Blueprint</h1>
      </div>

      <div class="prose prose-slate prose-lg max-w-none">
        <Content />
      </div>
    </article>
  </main>
</Layout>