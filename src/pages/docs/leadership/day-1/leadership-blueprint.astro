---
import { getEntry } from 'astro:content';
import Layout from '../../../../layouts/Layout.astro';

const entry = await getEntry('docs', 'leadership/day-1/leadership-blueprint');
const { Content } = await entry.render();
---

<Layout title={entry.data.title} showBackButton={true}>
  <main class="px-6 md:px-10 py-6">
    <article class="max-w-[800px]">
      <h1 class="text-[32px] font-bold text-gray-900 mb-3">
        {entry.data.title}
      </h1>

      <p class="text-gray-600 text-lg mb-8">
        {entry.data.description}
      </p>

      <div class="prose prose-slate max-w-none">
        <Content />
      </div>
    </article>
  </main>
</Layout>