---
import Layout from '../../../../layouts/Layout.astro';

const resources = [
  {
    title: 'Individual Assessment',
    description: 'Use the Level Competencies to compare/contract assessments for growth planning',
    href: '/docs/leadership/quarter-2/individual-assessment',
    image: '📝'
  },
  {
    title: 'Long-term Goals',
    description: 'Develop a strategic roadmap for career development',
    href: '/docs/leadership/quarter-2/long-term-goals',
    image: '🚀'
  }
];

const title = "Quarter 2";
---

<Layout title={title}>
  <div class="min-h-screen bg-gray-50">
    <div class="py-8 pl-10">
      <div class="mb-8">
        <h1 class="text-base font-medium text-gray-900">{title}</h1>
      </div>
      
      <div class="grid grid-cols-1 gap-4 max-w-[600px]">
        {resources.map(resource => (
          <a href={resource.href} class="block group">
            <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-duration-200">
              <div class="flex items-center p-4">
                <div class="flex-shrink-0 text-2xl mr-4">
                  {resource.image}
                </div>
                <div>
                  <h3 class="text-sm font-medium text-gray-900 mb-1">
                    {resource.title}
                  </h3>
                  <p class="text-xs text-gray-600">{resource.description}</p>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>