const currentPath = Astro.props.currentPath;
---

<aside class="w-64 bg-gray-50 h-full">
  <div class="p-2">
    <div class="mb-2">
      <input 
        type="text" 
        id="search-input"
        placeholder="Search docs..." 
        class="w-full px-3 py-1.5 bg-white rounded-md border border-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-200"
      />
      <SearchResults visible={false} />
    </div>
  </div>
  
  <nav class="px-2">
    {navigation.map((section) => (
      <div class="mb-1">
        <h3 class="text-sm font-medium text-gray-600 mb-0.5">{section.title}</h3>
        <div>
          {section.items.map((item) => (
            <a
              href={item.href}
              class:list={[
                'flex items-center px-2 py-1 text-sm text-gray-700 rounded-md hover:bg-gray-100',
                { 'bg-gray-100 text-gray-900': currentPath.startsWith(item.href) }
              ]}
            >
              <span class="mr-2">{item.icon}</span>
              <span>{item.name}</span>
            </a>
          ))}
        </div>
      </div>
    ))}
  </nav>
</aside>